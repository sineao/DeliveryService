<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name ="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;" />
    <link href ="/Content/bootstrap-theme.css" type="text/css" rel="stylesheet" />
    <link href ="/Content/bootstrap.css" type="text/css" rel="stylesheet">
    <link href ="/css/admin.css" type="text/css" rel="stylesheet">
    <script src="/js/jquery.min.js" type="text/javascript"></script>
    <script src="/Scripts/colorbox/jquery.colorbox.js"></script>
    
</head>
<body>
    <div id="wetten" class="not-delete @(ViewBag.MainClass != null ? ViewBag.MainClass: "main")">
        @if (ViewBag.ShowMenu == null || ViewBag.ShowMenu == true)
        {
            <div class="menu">
                <div class="main-header"><a href="/Admin/Galery">Galery</a></div>
                <div class="main-header follow-item"><a href="/Admin/GaleryUpload">Bild hochladen</a></div>
                <div style="clear:left"></div>
            </div>

            <div class="fly-menu" style="display:none;">
                <div class="main-header"><a href="/Admin/Galery">Galery</a></div>
                <div class="main-header follow-item"><a href="/Admin/GaleryUpload">Bild hochladen</a></div>
                <div style="clear:left"></div>
            </div>
        }
        @RenderBody()

        @RenderSection("scripts", required: false)
        <script>
            $(document).ready(function () {
                $('.colorbox').colorbox();
            });
        </script>
    </div>
</body>
</html>